@model AssessmentProject.Repository.ViewModels.CreateUserVM;
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <title>Login Page</title>
</head>
@if (TempData["Success"] != null)
{
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success("@TempData["Success"]");
    </script>
}
@if (TempData["Error"] != null)
{
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.error("@TempData["Error"]");
    </script>
}
<style>
    .error {
        display: inline;
        color: #DC3545;
        font-size: 16px;
    }
</style>
<body style="background-image: url('/images/main_background.jpg'); background-size: cover; background-repeat: no-repeat; height: 100vh;">
<div class="d-flex justify-content-center align-items-center h-100">
    <!-- Main Container -->
    <div class="container bg-white border rounded ">
        <!-- Section 1 (Heading & Button) -->
        <div class="d-flex align-items-center justify-content-between px-lg-5 px-2 pt-3">
            <div class="d-none d-sm-block">
                <h2>Registration Form</h2>
            </div>
            <div class="col-12 col-sm-2  d-flex justify-content-end align-items-end">
                <a asp-controller="User" asp-action="Login">
                <button type="button" class="btn btn-md back-btn">&lt;
                        Back</button></a>
            </div>
        </div>

        <!-- Section 2 (Main Form) -->
        <form asp-controller="User" asp-action="CreateUser" method="post" enctype="multipart/form-data">
            <div class="row mx-lg-4 mx-2 py-4 px-2">

                <!-- First Name -->
                <div class="col-12 col-sm-6 ">
                    <div class="form-floating mt-3">
                        <input type="text" class="form-control" placeholder="John"
                            asp-for="FirstName" maxlength="25">
                        <label for="floatingInput">First Name*</label>
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <!-- Last Name -->
                <div class="col-12 col-sm-6">
                    <div class="form-floating mt-3">
                        <input type="text" class="form-control" placeholder="Doe" asp-for="LastName" maxlength="25">
                        <label for="floatingInput">Last Name</label>
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="col-12 col-sm-6">
                    <div class="form-floating mt-3">
                        <input type="email" class="form-control" placeholder="name@example.com"
                            asp-for="EmailId" maxlength="50">
                        <label for="floatingInput">Email*</label>
                    </div>
                    <span asp-validation-for="EmailId" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="col-12 col-sm-6">
                    <div class="form-floating mt-3 d-flex align-items-center position-relative justify-content-end">
                        <input type="password" class="form-control" id="myInput4" asp-for="Password" placeholder="Enter password" autocomplete="off">
                        <label for="myInput4">Password*</label>
                        <i class="position-absolute pe-3" aria-hidden="true" onclick="eyeToggle('myInput4', 'eye-image4')">
                            <img id="eye-image4" src="~/images/eye-fill.svg" alt="eye-fill">
                        </i>
                    </div>

                    <!-- Dynamic Validation Messages -->
                    <div class="mt-2" id="errorContainer" style="display: none;">
                        <span id="message" class="error m-0">Password should contain</span>
                        <span id="lengthError" class="error d-none">At least 8 characters.</span>
                        <span id="upperError" class="error d-none">At least one uppercase letter.</span>
                        <span id="lowerError" class="error d-none">At least one lowercase letter.</span>
                        <span id="numberError" class="error d-none">At least one number.</span>
                        <span id="specialError" class="error d-none">At least one special character ($!%*?&).</span>
                    </div>
                </div>

                <!-- Country Dropdown -->
                <div class="col-md-6 col-xl-4 col-xs-12">
                    <div class="form-floating mt-3">
                        <select class="form-select form-control" id="countryDropdown" asp-for="CountryId"
                            asp-items="@(new SelectList(ViewBag.Countries, "Id", "CountryName"))">
                            <option value="">Select Country</option>
                        </select>
                        <label for="countryDropdown">Country*</label>
                    </div>
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>

                <!-- State Dropdown -->
                <div class="col-md-6 col-xl-4 col-xs-12">
                    <div class="form-floating mt-3">
                        <select class="form-select form-control" id="stateDropdown" asp-for="StateId"
                                asp-items="@(new SelectList(ViewBag.States ?? new List<SelectListItem>(), "Id", "StateName"))">
                            <option value="">Select State</option>
                        </select>
                        <label for="stateDropdown">State*</label>
                    </div>
                    <span asp-validation-for="StateId" class="text-danger"></span>
                </div>

                <!-- City Dropdown -->
                <div class="col-md-6 col-xl-4 col-xs-12">
                    <div class="form-floating mt-3">
                        <select class="form-select form-control" id="cityDropdown" asp-for="CityId"
                                asp-items="@(new SelectList(ViewBag.Cities ?? new List<SelectListItem>(), "Id", "CityName"))">
                            <option value="">Select City</option>
                        </select>
                        <label for="cityDropdown">City*</label>
                    </div>
                    <span asp-validation-for="CityId" class="text-danger"></span>
                </div>

                <!-- Address -->
                <div class="col-md-6 col-xl-8 col-xs-12">
                    <div class="form-floating mt-3">
                        <input type="text" class="form-control" placeholder="Ahmedabad"
                            asp-for="Address" maxlength="150">
                        <label for="floatingInput">Address*</label>
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <!-- Phone number -->
                <div class="col-md-6 col-xl-4 col-xs-12">
                    <div class="form-floating mt-3">
                        <input type="number" class="form-control" placeholder="9999999999"
                            asp-for="ContactNumber">
                        <label for="floatingInput">Phone*</label>
                    </div>
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex gap-3 py-3 pt-4 justify-content-end">
                    <input type="submit" class="btn regular-btn" value="Register"/>
                    <a asp-controller="User" asp-action="Userlist">
                    <button type="button" class="btn back-btn">
                        Cancel</button></a>
                </div>
            </div>
        </form>
    </div>
</div>
</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/site.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<script>
    $(document).ready(function () {
        //ajax handling for the GetStates based on different countries
        $("#countryDropdown").change(function () {
            var countryId = $(this).val();
            $("#stateDropdown").empty().append('<option value="">Select State</option>');
            $("#cityDropdown").empty().append('<option value="">Select City</option>');
            if (countryId) {
                $.ajax({
                    url: '/User/GetStates',
                    type: 'GET',
                    data: { countryId: countryId },
                    dataType: 'json',
                    success: function (states) {
                        if (states.length === 0) {
                            $("#stateDropdown").append('<option value="">No states available</option>');
                        } else {
                            $.each(states, function (i, state) {
                                $("#stateDropdown").append('<option value="' + state.id + '">' + state.stateName + '</option>');
                            });
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        toastr.error("Error fetching states:", textStatus, errorThrown);
                    }
                });
            }
        });

        $("#stateDropdown").mousedown(function (event) {
        var countryId = $("#countryDropdown").val();
        if (!countryId) {
            event.preventDefault();
            event.stopPropagation();
            toastr.warning("Please select country first.");
        }
    });

        //ajax handling for the GetCities based on different states
        $("#stateDropdown").change(function () {
            var stateId = $(this).val();
            $("#cityDropdown").empty().append('<option value="">Select City</option>');
            if (stateId) {
                $.ajax({
                    url: '/User/GetCities',
                    type: 'GET',
                    data: { stateId: stateId },
                    dataType: 'json',
                    success: function (cities) {
                        if (cities.length === 0) {
                            $("#cityDropdown").append('<option value="">No cities available</option>');
                        } else {
                            $.each(cities, function (i, city) {
                                $("#cityDropdown").append('<option value="' + city.id + '">' + city.cityName + '</option>');
                            });
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        toastr.error("Error fetching cities:", textStatus, errorThrown);
                    }
                });
            }
        });

        $("#cityDropdown").mousedown(function (event) {
        var stateId = $("#stateDropdown").val();
        if (!stateId) {
            event.preventDefault();
            event.stopPropagation();
            toastr.warning("Please select state first.");
        }
    });

    });
</script>
<script>
    let isTypingStarted = false;
    document.getElementById("myInput4").addEventListener("input", function () {
        let password = this.value;
        if (!isTypingStarted) {
            isTypingStarted = true;
            document.getElementById("errorContainer").style.display = "block";
        }

        let lengthValid = password.length >= 8;
        let upperValid = /[A-Z]/.test(password);
        let lowerValid = /[a-z]/.test(password);
        let numberValid = /\d/.test(password);
        let specialValid = /[@@$!%*#^?&]/.test(password);

        updateValidation("lengthError", lengthValid);
        updateValidation("upperError", upperValid);
        updateValidation("lowerError", lowerValid);
        updateValidation("numberError", numberValid);
        updateValidation("specialError", specialValid);

        const allValid = lengthValid && upperValid && lowerValid && numberValid && specialValid;
        updateValidation("message", allValid);
        if (allValid) {
            document.getElementById("errorContainer").style.display = "none";
        } else {
            document.getElementById("errorContainer").style.display = "block";
        }
    });

    function updateValidation(elementId, isValid) {
        const element = document.getElementById(elementId);
        if (isValid) {
            element.classList.add('d-none');
        } else {
            element.classList.remove('d-none');
        }
    }
</script>